<Window x:Class="SCARA_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCARA_GUI"
        mc:Ignorable="d"
        Title="Massey Univeristy - School of Food and Advanced Technology - SCARA 🦾" 
        Height="450" 
        Width="800" 
        WindowState="Normal" 
        ResizeMode="CanResize" 
        MinHeight="450" 
        MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="grid" Height="*"/>
        </Grid.RowDefinitions>
        <Menu Name="Menu" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <MenuItem Header="Options">
                <MenuItem Header="_Controls Visibility">
                    <MenuItem Header="_PING" IsCheckable="True" Click="MenuItem_Click"/>
                    <MenuItem Header="_ID" IsCheckable="True"/>
                    <MenuItem Header="_OFFSET" IsCheckable="True"/>
                    <MenuItem Header="_ROFFSET" IsCheckable="True"/>
                    <MenuItem Header="_PROX" IsCheckable="True"/>
                    <MenuItem Header="_SPEEDSET" IsCheckable="True"/>
                </MenuItem>
                <MenuItem Header="_Advanced Features" IsCheckable="True"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
