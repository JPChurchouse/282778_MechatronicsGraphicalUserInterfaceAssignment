<Window x:Class="SCARA_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCARA_GUI"
        mc:Ignorable="d"
        Title="Massey Univeristy - School of Food and Advanced Technology - SCARA 🦾" 
        Height="450" 
        Width="600" 
        WindowState="Normal" 
        ResizeMode="CanResize" 
        MinHeight="450" 
        MinWidth="600" Icon="/1701019.ico"
        SizeChanged="WindowResized"
        Closing="MainWindow_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="MenuBar" Height="22"/>
            <RowDefinition Name="StatusBar" Height="1*"/>
            <RowDefinition Name="Body" Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Controls" Width="2*" MinWidth="300"/>
            <ColumnDefinition Name="Border" Width="Auto"/>
            <ColumnDefinition Name="Output" Width="*" MinWidth="150"/>
        </Grid.ColumnDefinitions>

        <GridSplitter 
            Grid.Column="1" 
            Width="5" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Stretch"
            Background="Silver"
            Grid.RowSpan="3"
            />

        <!--Top menu-->
        <Menu
            Name="Menu" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0"
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch" 
            >
            <MenuItem Header="File">
                <MenuItem Header="Open Log File" Click="menu_OpenFile_Clicked"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Controls Visibility">
                    <MenuItem Header="WAIT" IsCheckable="True" Name="menu_Visibility_Wait" Click="menu_Vis_Clicked"/>
                    <MenuItem Header="ID" IsCheckable="True" Name="menu_Visibility_ID" Click="menu_Vis_Clicked"/>
                    <MenuItem Header="SOFFSET" IsCheckable="True" Name="menu_Visibility_SOffset" Click="menu_Vis_Clicked"/>
                    <MenuItem Header="ROFFSET" IsCheckable="True" Name="menu_Visibility_ROffset" Click="menu_Vis_Clicked"/>
                    <MenuItem Header="PROX" IsCheckable="True" Name="menu_Visibility_Prox" Click="menu_Vis_Clicked"/>
                    <MenuItem Header="SPEEDSET" IsCheckable="True" Name="menu_Visibility_Speedset" Click="menu_Vis_Clicked"/>
                </MenuItem>
                <MenuItem Header="Outputs" Name="menu_Outputs">
                    <MenuItem Header="Clear" Name="menu_Outputs_Clear" Click="menu_Out_Clicked"/>
                    <MenuItem Header="Alerts" IsChecked="True" IsEnabled="False" Name="menu_Outputs_Alert" Click="menu_Out_Clicked"/>
                    <MenuItem Header="System" IsCheckable="True" IsChecked="False" Name="menu_Outputs_System" Click="menu_Out_Clicked"/>
                    <MenuItem Header="Transmit" IsCheckable="True" IsChecked="True" Name="menu_Outputs_Transmit" Click="menu_Out_Clicked"/>
                    <MenuItem Header="Receive" IsCheckable="True" IsChecked="True" Name="menu_Outputs_Receive" Click="menu_Out_Clicked"/>
                </MenuItem>
                <MenuItem Header="Air Parameters" Click="menu_Air_Clicked"/>
            </MenuItem>
            <MenuItem Header="Help">
            </MenuItem>
        </Menu>
        
        <!--Connection panel-->
        <Grid Grid.Row="1" Background="DodgerBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Name="lbl_ConnectionStatus" 
                Content="Status: Disconnected"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="10,2,2,2"
                />
            <Button
                Name="btn_Connect"
                Grid.Column="1"
                Click="btn_Connect_Click"
                Content="Connect" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="5,5,5,5"
                IsDefault="True"
                />
        </Grid>

        <!--Status panel-->
        <Grid Grid.Row="1" Grid.Column="2" Background="DodgerBlue"/>
        <Label 
            Name="lbl_DeviceStatus"
            Grid.Column="2" 
            Grid.Row="1"
            Content="Offline"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="5,5,5,5"
        />

        <!--Inputs panel-->
        <Grid Grid.Row="2" Name="panel_Inputs">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <!--E-STOP-->
            <Button
                Content="STOP"
                Background="Red"
                Margin="4,2,4,2"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White"
                BorderBrush="Black"
                BorderThickness="2"
                Grid.ColumnSpan="2"
                Click="btn_Stop_Click"
                Name="btn_EmergencyStop"
                />

            <!--Move func-->
            <Border 
                Grid.Row="1" 
                Margin="4,2,2,2"
                BorderThickness="2" 
                BorderBrush="CornflowerBlue">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Margin="2,2,2,2" VerticalAlignment="Center" HorizontalAlignment="Left" Content="W:" Name="lbl_MoveW"/>
                    <Label Grid.Row="1" Margin="2,2,2,2" VerticalAlignment="Center" HorizontalAlignment="Left" Content="X:" Name="lbl_MoveX"/>
                    <Label Grid.Row="2" Margin="2,2,2,2" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Y:" Name="lbl_MoveY"/>

                    <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="2,2,2,2" Content="Move" Click="btn_Move_Click" Name="btn_MoveExecute"/>

                    <TextBox Grid.Column="1" Grid.Row="0" Margin="2,2,2,2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="0" Name="txt_MoveW"/>
                    <TextBox Grid.Column="1" Grid.Row="1" Margin="2,2,2,2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="0" Name="txt_MoveX"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Margin="2,2,2,2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="0" Name="txt_MoveY"/>
                </Grid>
            </Border>

            <!---Air func-->
            <Border 
                Grid.Row="1" 
                Grid.Column="1"
                Margin="2,2,4,2"
                BorderThickness="2" 
                BorderBrush="CornflowerBlue">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Piston:" Name="lbl_Piston" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <Label Grid.Row="1" Content="Gripper:" Name="lbl_Gripper" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                    <Button 
                        Grid.Column="1" 
                        Content="UP / down" 
                        Margin="2,2,2,2" 
                        Click="btn_Piston_Click"
                        Name="btn_Piston"
                        />
                    <Button 
                        Grid.Row="1" 
                        Grid.Column="1" 
                        Content="OPEN / close" 
                        Click="btn_Gripper_Click"
                        Name="btn_Gripper"
                        Margin="2,2,2,2" 
                        />
                    <Button 
                        Grid.Row="3" 
                        Grid.ColumnSpan="2" 
                        Content="Home" 
                        Margin="2,2,2,2" 
                        Click="btn_Home_Click"
                        Name="btn_Home"
                        />
                </Grid>
            </Border>
            
            <!--Extra funcs-->
            <Border 
                Grid.Row="2" 
                Grid.ColumnSpan="2"
                Margin="4,2,4,2"
                BorderThickness="2" 
                BorderBrush="CornflowerBlue"
                Name="bor_Extras">

                <ScrollViewer CanContentScroll="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Wait-->
                        <Grid Grid.Row="0" Name="grid_Wait">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Wait:" Margin="2,2,2,2" Name="lbl_Wait"/>
                            <TextBox Grid.Column="1" Text="1000" Margin="2,2,2,2" Name="txt_Wait"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_Wait"/>
                        </Grid>

                        <!--ID-->
                        <Grid Grid.Row="1" Name="grid_ID" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="ID:" Margin="2,2,2,2" Name="lbl_ID"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_ID"/>
                        </Grid>

                        <!--Set Offset-->
                        <Grid Grid.Row="2" Name="grid_SOffset">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Offset:" Margin="2,2,2,2" Name="lbl_SOffset"/>
                            <TextBox Grid.Column="1" Text="0" Margin="2,2,2,2" Name="txt_SOffset"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_SOffset"/>
                        </Grid>

                        <!--Read Offset-->
                        <Grid Grid.Row="3" Name="grid_ROffset">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="R-Offset:" Margin="2,2,2,2" Name="lbl_ROffset"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_ROffset"/>
                        </Grid>

                        <!--Read proximity-->
                        <Grid Grid.Row="4" Name="grid_Prox">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Prox:" Margin="2,2,2,2" Name="lbl_Prox"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_Prox"/>
                        </Grid>

                        <!--Speedset-->
                        <Grid Grid.Row="5" Name="grid_Speedset" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Speedset:" Margin="2,2,2,2" Name="lbl_Speedset"/>
                            <TextBox Grid.Column="1" Text="100" Margin="2,2,2,2" Name="txt_Speedset"/>
                            <Button Grid.Column="2" Content="Send" Margin="2,2,2,2" Name="btn_Speedset"/>
                        </Grid>
                    </Grid>
                </ScrollViewer>

            </Border>
            <!--Placeholder-->
            <Image 
                Grid.Row="2" 
                Name="img_Placeholder"
                Source="Massey-University.png" 
                Margin="4,4,4,4" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>
            <!--Output-->
        <TextBox 
            Grid.Column="2" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            Grid.Row="2" 
            BorderBrush="CornflowerBlue"
            BorderThickness="3"
            TextWrapping="NoWrap"
            Text="" 
            VerticalAlignment="Stretch"
            Name="text_OuputLog" 
            IsReadOnly="True" 
            MouseDoubleClick="LogBox_DoubleClicked"
            />
    </Grid>
</Window>
