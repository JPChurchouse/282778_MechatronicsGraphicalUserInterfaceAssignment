<Window x:Class="SCARA_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCARA_GUI"
        mc:Ignorable="d"
        Title="Massey Univeristy - School of Food and Advanced Technology - SCARA 🦾" 
        Height="450" 
        Width="800" 
        WindowState="Normal" 
        ResizeMode="CanResize" 
        MinHeight="450" 
        MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="MenuBar" Height="22"/>
            <RowDefinition Name="StatusBar" Height="1*"/>
            <RowDefinition Name="Body" Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Controls" Width="3*"/>
            <ColumnDefinition Name="Border" Width="3"/>
            <ColumnDefinition Name="Output" Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--Top menu-->
        <Menu
            Name="Menu" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0"
            MinWidth="800"
            MinHeight="22"
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch" 
            >
            <MenuItem Header="Options">
                <MenuItem Header="_Controls Visibility">
                    <MenuItem Header="_PING" IsCheckable="True" Click="MenuItem_Click"/>
                    <MenuItem Header="_ID" IsCheckable="True"/>
                    <MenuItem Header="_OFFSET" IsCheckable="True"/>
                    <MenuItem Header="_ROFFSET" IsCheckable="True"/>
                    <MenuItem Header="_PROX" IsCheckable="True"/>
                    <MenuItem Header="_SPEEDSET" IsCheckable="True"/>
                </MenuItem>
                <MenuItem Header="_Advanced Features" IsCheckable="True"/>
            </MenuItem>
        </Menu>
        
        <!--Connection panel-->
        <Grid Grid.Row="1" Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                Name="lbl_ConnectionStatus" 
                Content="Status: Disconnected"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="5,5,5,5"
                />
            <Button
                Grid.Column="1"
                Name="btn_Connect"
                Content="Connect" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="5,5,5,5"
                />
        </Grid>
        
        <!--Splitter panel-->
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="DarkGray"/>

        <!--Status panel-->
        <Grid Grid.Row="1" Grid.Column="2" Background="AliceBlue"/>
        <Label Grid.Column="2" Grid.Row="1"
            Name="lbl_Status"
               Content="Offline"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Margin="5,5,5,5"
        />

        <!--Inputs panel-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            
        </Grid>
            


    </Grid>
</Window>
